@inject IViewLocalizer L
@{
    ViewData["Title"] = L["PaymentFailedTitle"];
    var orderId = (Guid)ViewBag.OrderId;
}

<div style="max-width: 600px; margin: 50px auto; text-align: center;">
    <h1 style="color: #dc3545;">❌ @L["PaymentFailedHeader"]</h1>
    <p>@L["PaymentFailedMessage"]</p>
    <p><strong>@L["OrderIdLabel"]:</strong> @orderId</p>

    <p>@L["TryAgainOrContactSupport"]</p>

    <a href="/checkout" style="display: inline-block; margin-top: 20px; padding: 10px 20px; background-color: #dc3545; color: white; text-decoration: none; border-radius: 5px;">
        @L["RetryPaymentButton"]
    </a>
</div>
