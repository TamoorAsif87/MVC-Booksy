@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<div class="container py-5">
    <h2 class="mb-4">@Localizer["Heading"]</h2>

    <p>@Localizer["Intro"]</p>

    <h4 class="mt-4">@Localizer["FeaturesTitle"]</h4>
    <ul>
        <li>@Localizer["Feature1"]</li>
        <li>@Localizer["Feature2"]</li>
        <li>@Localizer["Feature3"]</li>
    </ul>

    <p class="mt-4">@Localizer["ClosingNote"]</p>
</div>
