@model IEnumerable<Cart>
@inject IViewLocalizer L
@{
    ViewData["Title"] = L["ShoppingCart"];
    var boughtTogether = ViewBag.boughtTogether as List<BookDto>;
}

<div class="row mt-4" id="cart">
    <partial name="_CartPartialView" model="@Model" />
</div>

@if (boughtTogether != null && boughtTogether.Any())
{
    <div class="container" id="cart-books">
        <hr class="my-5" />
        <h3 class="mb-4">@L["UsuallyBoughtTogether"]</h3>

        <div class="row row-cols-1 row-cols-md-4 g-4">
            @foreach (var book in boughtTogether)
            {
                <div class="col">
                    <partial name="_BookCardPartialView" model="@book" />
                </div>
            }
        </div>
    </div>
}
