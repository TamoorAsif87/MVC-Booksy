@model RegisterDto
@inject IViewLocalizer L

@{
    Layout = null;
    ViewBag.Title = L["RegisterTitle"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background: url('/uploads/images/register.jpg') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
            display: flex;
            align-items: flex-start;
            justify-content: center;
            padding-top: 60px;
        }

        .card {
            width: 350px !important;
            max-width: 100%;
            margin-top: 20px;
        }

        .home-link {
            position: absolute;
            top: 20px;
            left: 20px;
            color: white;
            text-decoration: none;
            font-weight: bold;
        }

            .home-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <!-- Home link -->
    <a href="/" class="home-link"><i class="bi bi-house-fill"></i> @L["Home"]</a>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 d-flex justify-content-center">
                <div class="card shadow-lg rounded-4 border-0">
                    <div class="card-body p-4">

                        <!-- App Logo or name -->
                        <a class="navbar-brand fw-bold d-block text-center mb-3" href="/">📚 Booksy</a>

                        <h2 class="card-title text-center mb-4">@L["CreateAccountHeader"]</h2>

                        <div class="text-danger" asp-validation-summary="All"></div>

                        <form asp-action="Register" method="post">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">@L["Name"]</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">@L["Email"]</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">@L["Password"]</label>
                                <div class="input-group">
                                    <input asp-for="Password" class="form-control" id="registerPasswordInput" />
                                    <button type="button" class="btn btn-outline-primary" id="toggleRegisterPassword">
                                        <i class="bi-eye-slash" id="registerToggleIcon"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 mt-3">@L["RegisterButton"]</button>

                            <div class="text-center mt-3">
                                <small>@L["AlreadyHaveAccount"] <a asp-controller="account" asp-action="login">@L["LoginLink"]</a></small>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
    <script>
        setupPasswordToggle('toggleRegisterPassword', 'registerPasswordInput', 'registerToggleIcon');
    </script>
</body>
</html>
