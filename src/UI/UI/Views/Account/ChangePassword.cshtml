@model ChangePasswordDto
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"];
}

<div class="container d-flex align-items-start justify-content-center min-vh-100 bg-light px-3">
    <div class="card shadow border-0 w-100 mt-5" style="max-width: 500px;">
        <div class="card-body p-4">
            <h2 class="text-center mb-4">@Localizer["Heading"]</h2>

            <form asp-action="ChangePassword" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">@Localizer["EmailLabel"]</label>
                    <input asp-for="Email" class="form-control" value="@Model.Email" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="CurrentPassword" class="form-label">@Localizer["CurrentPasswordLabel"]</label>
                    <input asp-for="CurrentPassword" type="password" class="form-control" />
                    <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label">@Localizer["NewPasswordLabel"]</label>
                    <input asp-for="NewPassword" type="password" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">@Localizer["ChangePasswordButton"]</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
