@{
    var type = TempData["Toast.Type"]?.ToString()?.ToLower();   // e.g. "success", "error"
    var title = TempData["Toast.Title"]?.ToString(); // Optional heading
    var message = TempData["Toast.Message"]?.ToString(); // The message
}

@if (!string.IsNullOrEmpty(type) && !string.IsNullOrEmpty(message))
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            showToast("@type", "@title", "@message");
        });
    </script>
}
