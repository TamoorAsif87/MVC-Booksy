@model CategoryDto

@{
    ViewData["Title"] = Model.Id == Guid.Empty ? "Create Category" : "Edit Category";
    ViewData["Section"] = "Categories";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
    var formAction = Model.Id == Guid.Empty ? "Create" : "Edit";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <form asp-action="@formAction" method="post" novalidate>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control w-50" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">
            @(Model.Id == Guid.Empty ? "Create" : "Update")
        </button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
