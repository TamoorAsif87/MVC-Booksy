@model UI.Areas.admin.ViewModels.UpdateBookDtoVM

@{
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Update Book";
    ViewData["Section"] = "Books";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb bg-light px-3 py-2 rounded shadow-sm">
        <li class="breadcrumb-item">
            <a asp-area="admin" asp-controller="Dashboard" asp-action="Home">Dashboard</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-area="admin" asp-controller="Book" asp-action="Index">Books</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</nav>

<h2 class="mb-4">Update Book</h2>

<form asp-action="Edit" asp-route-id="@Model.updateBookDto!.Id" method="post" enctype="multipart/form-data" class="row g-3">
    <input asp-for="updateBookDto.BookCover" type="hidden" value="@Model.updateBookDto?.BookCover"/>
    <div class="col-md-6">
        <label asp-for="updateBookDto.Title" class="form-label"></label>
        <input asp-for="updateBookDto.Title" class="form-control" />
        <span asp-validation-for="updateBookDto.Title" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="updateBookDto.Author" class="form-label"></label>
        <input asp-for="updateBookDto.Author" class="form-control" />
        <span asp-validation-for="updateBookDto.Author" class="text-danger"></span>
    </div>

    <div class="col-md-12">
        <label asp-for="updateBookDto.Description" class="form-label"></label>
        <textarea asp-for="updateBookDto.Description" rows="4" class="form-control"></textarea>
        <span asp-validation-for="updateBookDto.Description" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="updateBookDto.Price" class="form-label"></label>
        <input asp-for="updateBookDto.Price" class="form-control" />
        <span asp-validation-for="updateBookDto.Price" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="updateBookDto.Discount" class="form-label"></label>
        <input asp-for="updateBookDto.Discount" class="form-control" />
        <span asp-validation-for="updateBookDto.Discount" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="updateBookDto.Available" class="form-label"></label>
        <input asp-for="updateBookDto.Available" class="form-control" />
        <span asp-validation-for="updateBookDto.Available" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="updateBookDto.PublishedDate" class="form-label"></label>
        <input asp-for="updateBookDto.PublishedDate" type="date" class="form-control" />
        <span asp-validation-for="updateBookDto.PublishedDate" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="updateBookDto.ISBN" class="form-label"></label>
        <input asp-for="updateBookDto.ISBN" class="form-control" />
        <span asp-validation-for="updateBookDto.ISBN" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="updateBookDto.CategoryId" class="form-label">Category</label>
        <select asp-for="updateBookDto.CategoryId" class="form-select" asp-items="Model.Categories">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="updateBookDto.CategoryId" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Replace Cover Image</label>
        <input type="file" asp-for="File" class="form-control" />
    </div>

    @if (!string.IsNullOrEmpty(Model.updateBookDto!.BookCover))
    {
        <div class="col-md-6">
            <label class="form-label d-block">Current Cover</label>
            <img src="@Model.updateBookDto.BookCover" alt="Book Cover" class="img-thumbnail" style="max-height: 150px;" />
        </div>
    }

    <div class="col-12 mt-3">
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
