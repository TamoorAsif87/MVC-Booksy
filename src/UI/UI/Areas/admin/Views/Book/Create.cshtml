@model CreateBookDtoVM

@{
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Create Book";
    ViewData["Section"] = "Books";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb bg-light px-3 py-2 rounded shadow-sm">
        <li class="breadcrumb-item">
            <a asp-area="admin" asp-controller="Dashboard" asp-action="Home">Dashboard</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-area="admin" asp-controller="Book" asp-action="Index">Books</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Create</li>
    </ol>
</nav>

<h2 class="mb-4">Create Book</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="row g-3">
    <div class="col-md-6">
        <label asp-for="CreateBookDto.Title" class="form-label"></label>
        <input asp-for="CreateBookDto.Title" class="form-control" />
        <span asp-validation-for="CreateBookDto.Title" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="CreateBookDto.Author" class="form-label"></label>
        <input asp-for="CreateBookDto.Author" class="form-control" />
        <span asp-validation-for="CreateBookDto.Author" class="text-danger"></span>
    </div>

    <div class="col-md-12">
        <label asp-for="CreateBookDto.Description" class="form-label"></label>
        <textarea asp-for="CreateBookDto.Description" rows="4" class="form-control"></textarea>
        <span asp-validation-for="CreateBookDto.Description" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="CreateBookDto.Price" class="form-label"></label>
        <input asp-for="CreateBookDto.Price" class="form-control" />
        <span asp-validation-for="CreateBookDto.Price" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="CreateBookDto.Discount" class="form-label"></label>
        <input asp-for="CreateBookDto.Discount" class="form-control" />
        <span asp-validation-for="CreateBookDto.Discount" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="CreateBookDto.Available" class="form-label"></label>
        <input asp-for="CreateBookDto.Available" class="form-control" />
        <span asp-validation-for="CreateBookDto.Available" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="CreateBookDto.PublishedDate" class="form-label"></label>
        <input asp-for="CreateBookDto.PublishedDate" type="date" class="form-control" />
        <span asp-validation-for="CreateBookDto.PublishedDate" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="CreateBookDto.ISBN" class="form-label"></label>
        <input asp-for="CreateBookDto.ISBN" class="form-control" />
        <span asp-validation-for="CreateBookDto.ISBN" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="CreateBookDto.CategoryId" class="form-label">Category</label>
        <select asp-for="CreateBookDto.CategoryId" class="form-select" asp-items="Model.Categories">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CreateBookDto.CategoryId" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Book Cover Image</label>
        <input type="file" asp-for="File" class="form-control" />
    </div>

    <div class="col-12 mt-3">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
