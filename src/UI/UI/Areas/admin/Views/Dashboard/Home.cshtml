@{
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Dashboard";
    ViewData["Section"] = "Dashboard";
}

<div class="container py-4">
    <h2 class="mb-3">Welcome, Admin! 👋</h2>
    <p class="text-muted">Here's a quick overview of your control panel. Use the links below to manage the platform.</p>

    <div class="row mt-4">
        <div class="col-md-3 mb-4">
            <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="card text-decoration-none shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-people display-4 text-primary mb-2"></i>
                    <h5 class="card-title">Manage Users</h5>
                    <p class="text-muted small">View and manage user accounts</p>
                </div>
            </a>
        </div>

        <div class="col-md-3 mb-4">
            <a asp-area="Admin" asp-controller="Book" asp-action="Index" class="card text-decoration-none shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-journal-bookmark display-4 text-success mb-2"></i>
                    <h5 class="card-title">Manage Books</h5>
                    <p class="text-muted small">Add or edit book listings</p>
                </div>
            </a>
        </div>

        <div class="col-md-3 mb-4">
            <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="card text-decoration-none shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-tags display-4 text-warning mb-2"></i>
                    <h5 class="card-title">Manage Categories</h5>
                    <p class="text-muted small">Organize books by category</p>
                </div>
            </a>
        </div>

        <div class="col-md-3 mb-4">
            <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="card text-decoration-none shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-cart display-4 text-danger mb-2"></i>
                    <h5 class="card-title">Manage Orders</h5>
                    <p class="text-muted small">Track and fulfill customer orders</p>
                </div>
            </a>
        </div>
    </div>
</div>
